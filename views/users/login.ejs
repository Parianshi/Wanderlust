<% layout("/layouts/boilerplate.ejs") %>
<div class="row new-page">
    <div class="col-8 offset-2">
        <h1>Login to Wanderlust</h1>
        <form method="POST" action="/login" novalidate class="needs-validation"> 
        <div class="mb-2">
            <label for="username" class="form-label fs-5">Username</label>
            <input 
               type="text" 
               name="username" 
               id="username"
               class="form-control"
               required
            >
        </div>

        <div class="mb-2">
            <label for="password" class="form-label fs-5">Password</label>
            <input 
               type="password" 
               name="password" 
               id="password"
               class="form-control"
               required
            >
        </div>
<br>
        <button class="btn add-btn">Login</button>

        </form>
    </div>
</div>