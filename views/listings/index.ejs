<% layout("/layouts/boilerplate") %>
<style>
.filters{
    display: flex;
    gap: 3rem;
    align-items: center;
    overflow-x: auto;
    padding: 0.5rem 1rem;
}

.filter.active {
  color: black;
  border-bottom: 2px solid black;
}

.filter.active i {
  opacity: 1;
}

  
.filter{
  display: flex;
  flex-direction: column;
  align-items: center;
  cursor: pointer;
  color: #717171;
  font-size: 0.85rem;
  padding-bottom: 0.5rem;
  transition: all 0.25s ease;
  text-decoration: none;
}


.filter i {
  opacity:0.7;
  font-size: 1.2rem;
  margin-bottom: 0.4rem;
  display: flex;
  align-items: center;
  justify-content: center;
  text-decoration: none;
}

.filter i:hover{
    opacity:1;
}

.tax-info{
  display: none;
}

.tax-toggle{
  border: 1px solid black;
  border-radius: 1rem;
  height: 3.25rem;
  padding: 1rem;
  margin-left: 4rem;
  display:flex;
  align-items: center;
}

</style>

<div class="filters mt-4 mb-3">

  <a href="/listings/category/trending" class="filter <%= activeCategory === 'trending' ? 'active' : '' %>">
    <i class="fa-solid fa-fire"></i>
    <p>Trending</p>
  </a>

  <a href="/listings/category/rooms" class="filter <%= activeCategory === 'rooms' ? 'active' : '' %>">
    <i class="fa-solid fa-bed"></i>
    <p>Rooms</p>
  </a>

  <a href="/listings/category/iconic" class="filter <%= activeCategory === 'iconic' ? 'active' : '' %>">
    <i class="fa-solid fa-city"></i>
    <p>Iconic Cities</p>
  </a>

  <a href="/listings/category/mountains" class="filter <%= activeCategory === 'mountains' ? 'active' : '' %>">
    <i class="fa-solid fa-mountain"></i>
    <p>Mountains</p>
  </a>


  <a href="/listings/category/castles" class="filter <%= activeCategory === 'castles' ? 'active' : '' %>">
    <i class="fa-brands fa-fort-awesome"></i>
    <p>Castles</p>
  </a>

  <a href="/listings/category/pools" class="filter <%= activeCategory === 'pools' ? 'active' : '' %>">
    <i class="fa-solid fa-water-ladder"></i>
    <p>Amazing Pools</p>
  </a>

  <a href="/listings/category/camping" class="filter <%= activeCategory === 'camping' ? 'active' : '' %>">
    <i class="fa-solid fa-campground"></i>
    <p>Camping</p>
  </a>

  <a href="/listings/category/farms" class="filter <%= activeCategory === 'farms' ? 'active' : '' %>">
    <i class="fa-solid fa-cow"></i>
    <p>Farms</p>
  </a>

  <a href="/listings/category/arctic" class="filter <%= activeCategory === 'arctic' ? 'active' : '' %>">
    <i class="fa-solid fa-snowflake"></i>
    <p>Arctic</p>
  </a>

  <a href="/listings/category/dome" class="filter <%= activeCategory === 'arctic' ? 'active' : '' %>">
    <i class="fa-solid fa-igloo"></i>
    <p>Dome</p>
  </a>

  <a href="/listings/category/deserts" class="filter <%= activeCategory === 'deserts' ? 'active' : '' %>">
    <i class="fa-solid fa-seedling"></i>
    <p>Deserts</p>
  </a>

  <div class="tax-toggle mb-4">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
    </div>
  </div>

</div>

<div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 g-4">
  <% for (let listing of allListings) { %>

    <a href="/listings/<%= listing._id %>" id="a">
       <div class="col">
      <div class="card h-100">
        <img 
          src="<%= listing.image.url %>" 
          class="card-img-top" 
          alt="listing_image"
        >


        <div class="card-body">
          <p class="card-text fw-semibold">
            <b><%= listing.title %></b><br>
            &#8377;
            <%= listing.price ? listing.price.toLocaleString("en-IN") : "Price not set" %>/night
            <i class="tax-info">&nbsp; +18% GST</i>

          </p>
        </div>
      </div>
    </div>
    </a>

  <% } %>
</div>


<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", ()=> {
    let taxInfo = document.getElementsByClassName("tax-info");
    for(let info of taxInfo){
      if(info.style.display != "inline"){
      info.style.display = "inline";
      } else {
        info.style.display="none";
      }
    }
    // console.log(taxInfo);
  })
</script>

